<Window x:Class="PetNetwork.WPF.Views.Windows.CreateMessageGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetNetwork.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="CreateMessageGroup" Height="200" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20" Name="GroupName" Text="Group name" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <TextBox Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Name="GroupNameTextBox"></TextBox>

        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" Content="Add all volunteers" FontSize="20"
                Click="VolunteerButton_Click" Name="VolunteerButton"/>

        <Button Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" FontSize="20" Content="Create"
                Click="CreateButton_Click"/>
    </Grid>
</Window>
